{% extends 'admin/layout.html.twig' %}

{% block title %}Theme
{% endblock %}

{% block body %}
	<h1>Theme</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ theme.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ theme.name }}</td>
			</tr>
		</tbody>
	</table>

	<div class="d-flex flex-row bd-highlight mb-3">
		<div class="p-2 bd-highlight">
			<a href="{{ path('admin_theme_edit', {'id': theme.id}) }}">edit</a>
			{{ include('admin/theme/_delete_form.html.twig') }}
		</div>
	</div>


	<a href="{{ path('admin_theme_index') }}">Retour</a>

{% endblock %}
